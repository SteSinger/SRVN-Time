<Window x:Class="SRVN_time.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRVN_time"
        mc:Ignorable="d"
        Title="SRVN Time" Height="235" Width="525" Closed="Window_Closed" Initialized="Window_Initialized">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" >
                <MenuItem Header="Settings" Click="MenuItem_Click"/>
                <Label x:Name="lblConnection" Content="Label" Padding="5,0"/>
            </Menu>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel  x:Name="panel" Orientation="Horizontal" />
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
